1.2
log
@Graphs of autumn PER data, corrected for instrumental asymmetries and
mis-positioning of sample, added.
@
text
@d25 1
a25 1
set size 1, 1.15
d42 3
a44 3
set terminal pslatex color
set xlabel "$E_b/\\ut{eV}$"
set ylabel "$I_p/\\ut{fA}$"
d46 2
a47 2
set output '20011121_positioned.tex'
plot '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 < 1.5 ? $8/P_0_0 : 1/0):4:($9/P_0_0) title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 >= 1.5 ? $8/P_0_0 : 1/0):4:($9/P_0_0) title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 < 1.5 ? $8/P_0_1 : 1/0):4:($9/P_0_1) title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 >= 1.5 ? $8/P_0_1 : 1/0):4:($9/P_0_1) title 'Magnetization down, detector 2'
d49 3
a51 3
set terminal png color
set xlabel "Eb/eV"
set ylabel "Ip/fA"
d53 2
a54 2
set output '20011121_positioned.png'
plot '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 < 1.5 ? $8/P_0_0 : 1/0):4:($9/P_0_0) title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 >= 1.5 ? $8/P_0_0 : 1/0):4:($9/P_0_0) title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 < 1.5 ? $8/P_0_1 : 1/0):4:($9/P_0_1) title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 >= 1.5 ? $8/P_0_1 : 1/0):4:($9/P_0_1) title 'Magnetization down, detector 2'
d57 3
a59 3
set terminal pslatex color
set xlabel "$E_b/\\ut{eV}$"
set ylabel "$I_a/\\ut{fA}$"
d61 2
a62 2
set output '20011121_perfect.tex'
plot '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 < 1.5 ? $8/(P_0_0*eta_0) : 1/0):4:($9/(P_0_0*eta_0)) title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 >= 1.5 ? $8/(P_0_0*eta_1) : 1/0):4:($9/(P_0_0*eta_1)) title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 < 1.5 ? $8/(P_0_1*eta_0) : 1/0):4:($9/(P_0_1*eta_0)) title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 >= 1.5 ? $8/(P_0_1*eta_1) : 1/0):4:($9/(P_0_1*eta_1)) title 'Magnetization down, detector 2'
d64 3
a66 3
set terminal png color
set xlabel "Eb/eV"
set ylabel "Ia/fA"
d68 2
a69 2
set output '20011121_perfect.png'
plot '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 < 1.5 ? $8/(P_0_0*eta_0) : 1/0):4:($9/(P_0_0*eta_0)) title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1 >= 0 && $2 >= 1.5 ? $8/(P_0_0*eta_1) : 1/0):4:($9/(P_0_0*eta_1)) title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 < 1.5 ? $8/(P_0_1*eta_0) : 1/0):4:($9/(P_0_1*eta_0)) title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1 < 0 && $2 >= 1.5 ? $8/(P_0_1*eta_1) : 1/0):4:($9/(P_0_1*eta_1)) title 'Magnetization down, detector 2'
@


1.1
log
@Initial revision
@
text
@d21 2
d25 2
d33 1
a33 1
plot '20011121_Polarimetry.dat' using 3:($1==+1 && $2==1 ? $8 : 1/0):4:9 title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1==+1 && $2==2 ? $8 : 1/0):4:9 title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1==-1 && $2==1 ? $8 : 1/0):4:9 title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1==-1 && $2==2 ? $8 : 1/0):4:9 title 'Magnetization down, detector 2'
d40 30
a69 1
plot '20011121_Polarimetry.dat' using 3:($1==+1 && $2==1 ? $8 : 1/0):4:9 title 'Magnetization up, detector 1', '20011121_Polarimetry.dat' using 3:($1==+1 && $2==2 ? $8 : 1/0):4:9 title 'Magnetization up, detector 2', '20011121_Polarimetry.dat' using 3:($1==-1 && $2==1 ? $8 : 1/0):4:9 title 'Magnetization down, detector 1', '20011121_Polarimetry.dat' using 3:($1==-1 && $2==2 ? $8 : 1/0):4:9 title 'Magnetization down, detector 2'
@
