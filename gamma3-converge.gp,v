# 330, Boston, MA 02111-1307 USA

# This plots the convergence of coefficient 3 of the spin-averaged scattering
# probability at the thorium foil.

set pointsize 0.01
set style data lines
set key below
set size 1, 2

set terminal pslatex
set color
set xlabel "$i$"
set ylabel "$\\bar{\\Gamma_3}^{(\\textrm{pos}, n, i)}/\\ut{fJ}^{-3}$ or $\\sqrt{\\bar{\\Gamma_3^2}^{(\\textrm{pos}, n, i)}}/\\ut{fJ}^{-3}$"

set output 'gamma3-converge.tex'
plot 'null_params' using ($0+1):21 title "$\\bar{\\Gamma_3}^{(\\textrm{pos}, N, i)}$", 'null_sparams' using ($0+1):(sqrt($21)) title "$\\sqrt{\\bar{\\Gamma_3^2}^{(\\textrm{pos}, N, i)}}$", 'main_params' using ($0+1):21 title "$\\bar{\\Gamma_3}^{(\\textrm{pos}, M, i)}$", 'main_sparams' using ($0+1):(sqrt($21)) title "$\\sqrt{\\bar{\\Gamma_3^2}^{(\\textrm{pos}, M, i)}}$"

set terminal png
set color
set xlabel "i"
set ylabel "Gamma3bar(pos, n, i)/fJ^-3 or sqrt(Gamma3^2bar(pos, n, i))/fJ^-3"

set output 'gamma3-converge.png'
plot 'null_params' using ($0+1):21 title "Gamma3bar(pos, N, i)", 'null_sparams' using ($0+1):(sqrt($21)) title "sqrt(Gamma3^2bar(pos, N, i))", 'main_params' using ($0+1):21 title "Gamma3bar(pos, M, i)", 'main_sparams' using ($0+1):(sqrt($21)) title "sqrt(Gamma3^2bar(pos, M, i))"
@


